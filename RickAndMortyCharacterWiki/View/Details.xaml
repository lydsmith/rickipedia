<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="RickAndMortyCharacterWiki.View.Details">
    <ContentPage.Content>
        <ScrollView BackgroundColor="{StaticResource backgroundColorPrimary}">
            <Frame CornerRadius="10"  Margin="15"
                OutlineColor="{StaticResource textAndOutlineColor}" BackgroundColor="{StaticResource accentColorPrimary}">

                <StackLayout Orientation="Vertical">
                    <Frame CornerRadius="10" Margin="5" Padding="0" IsClippedToBounds="True">
                        <Image Aspect="AspectFill" Source="{Binding Character.image}" HorizontalOptions="Fill" />
                    </Frame>
                    <StackLayout
                    Orientation="Horizontal">
                        <Label Text="Name:" FontSize="11"
                HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"  />
                        <Label Text="{Binding Character.name}" FontSize="11"
                HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand"  />
                    </StackLayout>
                </StackLayout>
            </Frame>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>