<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodel="clr-namespace:RickAndMortyCharacterWiki.ViewModel"
             x:Class="RickAndMortyCharacterWiki.View.Index">
    <ContentPage.BindingContext>
        <viewmodel:IndexViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Start" Spacing="-6">
                <StackLayout 
                    Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="5">
                    <Label Text="Filter by:" FontAttributes="Bold" FontSize="12" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
                    <Picker Title="Gender" ItemsSource="{Binding Genders}" HorizontalOptions="FillAndExpand" FontSize="12" SelectedItem="{Binding SelectedGender}"/>

                </StackLayout>
                <StackLayout 
                    Orientation="Horizontal" HorizontalOptions="Fill" VerticalOptions="Center" Margin="15">
                    <Label Text="{Binding PagesLabel}"/>
                    <StackLayout 
                        Orientation="Horizontal" HorizontalOptions="EndAndExpand" VerticalOptions="Center">
                        <ImageButton Source="leftarrow.png" IsVisible="{Binding HasPrevious}" BackgroundColor="Transparent" HorizontalOptions="Start" WidthRequest="20" Command="{Binding GetPreviousPage}"/>
                        <ImageButton Source="rightarrow.png" IsVisible="{Binding HasNext}" BackgroundColor="Transparent"  HorizontalOptions="End" WidthRequest="20" Command="{Binding GetNextPage}"/>
                    </StackLayout>
                </StackLayout>
                <CollectionView ItemsSource="{Binding Characters}" SelectionMode="Single" SelectedItem="{Binding SelectedCharacter, Mode=TwoWay}" Margin="5" VerticalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <ContentView>
                                <Frame CornerRadius="10" Margin="5" Padding="10"
                               OutlineColor="Brown" BackgroundColor="PaleTurquoise">
                                    <StackLayout
                                    Orientation="Horizontal" HorizontalOptions="Fill" VerticalOptions="CenterAndExpand">
                                        <!--<Image Source="{Binding image}" HeightRequest="40" WidthRequest="40" VerticalOptions="Center" HorizontalOptions="Fill"></Image>-->
                                        <Frame CornerRadius="60" Margin="0" Padding="0" IsClippedToBounds="True" WidthRequest="70" HeightRequest="70">
                                            <Image Aspect="AspectFill" Source="{Binding image}" HorizontalOptions="Fill" />
                                        </Frame>
                                        <StackLayout
                                        Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Center" >
                                            <StackLayout
                                            Orientation="Horizontal" HorizontalOptions="Fill" Margin="0" Padding="0">
                                                <Label Text="Name:" FontSize="9" TextColor="Brown"
                                                HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"  />
                                                <Label Text="{Binding name}" FontSize="9" TextColor="Brown"
                                                HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand"  />
                                            </StackLayout>
                                            <StackLayout
                                            Orientation="Horizontal" HorizontalOptions="Fill">
                                                <Label Text="Status:" FontSize="9" TextColor="Brown"
                                                HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"  />
                                                <Label Text="{Binding status}" FontSize="9" TextColor="Brown"
                                                HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand"  />
                                            </StackLayout>
                                            <StackLayout
                                            Orientation="Horizontal" HorizontalOptions="Fill">
                                                <Label Text="Species:" FontSize="9" TextColor="Brown"
                                                HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"  />
                                                <Label Text="{Binding species}" FontSize="9" TextColor="Brown"
                                                HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand"  />
                                            </StackLayout>
                                            <StackLayout
                                            Orientation="Horizontal" HorizontalOptions="Fill">
                                                <Label Text="Gender:" FontSize="9" TextColor="Brown"
                                                HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"  />
                                                <Label Text="{Binding gender}" FontSize="9" TextColor="Brown"
                                                HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand"  />
                                            </StackLayout>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </ContentView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>